programa {

  inteiro valor, antecessor, sucessor


  funcao inicio() {

    //entrada
    escreva("digite qualquer numero inteiro:")
    leia(valor)

    //processamento

    antecessor=valor-1
    sucessor=valor+1

    //siada 
    escreva("o antecessor ", valor, " é ", antecessor, "\n")
    escreva("o sucessor de ", valor, "é igual á ", sucessor, "\n")
    


  }
}
